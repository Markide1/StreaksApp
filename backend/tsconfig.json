{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
